{{section-tabs model "authShow" paths}}
{{#if model.meta.total}}
  {{#each model as |item|}}
    {{#linked-block
      "vault.cluster.access.method.show"
      item.id
      "details"
      class="list-item-row"
      data-test-method-row=true
    }}
      <div class="columns is-mobile">
        <div class="column is-7-tablet is-10-mobile">
          {{#link-to
            "vault.cluster.access.method.show"
            item.id
            "details"
            class="is-block has-text-black has-text-weight-semibold"
            data-test-method-link=true
          }}
            {{i-con glyph="role" size=14 class="has-text-grey-light"}}
            <span class="has-text-weight-semibold">
              {{item.name}}
            </span>
          {{/link-to}}
          <div class="has-text-grey is-size-8">
            {{item.id}}
          </div>
        </div>
        <div class="column is-3 is-hidden-mobile">
          {{#if item.aliases.length}}
            {{pluralize item.aliases.length "alias"}}
          {{/if}}
        </div>
      </div>
    {{/linked-block}}
  {{/each}}
  {{#if (gt model.meta.lastPage 1)}}
    {{list-pagination
      page=model.meta.currentPage
      lastPage=model.meta.lastPage
      link="vault.cluster.access.method.list"
    }}
  {{/if}}
{{else}}
  <EmptyState
    @title="No {{pluralize itemType}} yet"
    @message="A list of
      {{pluralize itemType}}
       in this namespace will be listed here. Create your first
      {{itemType}}
       to get started."
  >
    {{#link-to
      "vault.cluster.access.method.create"
      (pluralize itemType)
      tagName="button"
      class="link"
    }}
      Create{{itemType}}
    {{/link-to}}
  </EmptyState>
{{/if}}