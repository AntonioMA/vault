<PageHeader as |p|>
  <p.top>
    {{key-value-header
      baseKey=model
      path="vault.cluster.access.method"
      root=root
      showCurrent=true
    }}
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{capitalize method}}
    </h1>
  </p.levelLeft>
  <p.levelRight>
    {{#link-to
      "vault.cluster.access.method.item.create"
      (pluralize itemType)
      class="button has-icon-right is-ghost is-compact"
      data-test-entity-create-link=true
    }}
      Create{{itemType}}{{i-con glyph="chevron-right" size=11}}
    {{/link-to}}
  </p.levelRight>
</PageHeader>
{{section-tabs model "authShow" paths}}
{{#if model.meta.total}}
  {{#each model as |item|}}
    {{#linked-block
      "vault.cluster.access.method.item.show"
      (pluralize itemType)
      item.id
      class="list-item-row"
      data-test-method-row=true
    }}
      <div class="columns is-mobile">
        <div class="column is-7-tablet is-10-mobile">
          {{#link-to
            "vault.cluster.access.method.item.show"
            (pluralize itemType)
            item.id
            class="is-block has-text-black has-text-weight-semibold"
            data-test-method-link=true
          }}
            {{i-con glyph="role" size=14 class="has-text-grey-light"}}
            <span class="has-text-weight-semibold">
              {{item.id}}
            </span>
          {{/link-to}}
          <div class="has-text-grey is-size-8">
            {{item.id}}
          </div>
        </div>
      </div>
    {{/linked-block}}
  {{/each}}
  {{#if (gt model.meta.lastPage 1)}}
    {{list-pagination
      page=model.meta.currentPage
      lastPage=model.meta.lastPage
      link="vault.cluster.access.method.item.list"
    }}
  {{/if}}
{{else}}
  <EmptyState
    @title="No {{pluralize itemType}} yet"
    @message="A list of
      {{pluralize itemType}}
       in this namespace will be listed here. Create your first
      {{itemType}}
       to get started."
  >
    {{#link-to
      "vault.cluster.access.method.item.create"
      (pluralize itemType)
      tagName="button"
      class="link"
    }}
      Create{{itemType}}
    {{/link-to}}
  </EmptyState>
{{/if}}